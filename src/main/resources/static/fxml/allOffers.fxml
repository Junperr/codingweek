                  <children>
                     <Button mnemonicParsing="false" onMouseClicked="#saveFilters" prefHeight="25.0" prefWidth="91.0" stylesheets="@../css/allOffers.css" text="Save filters">
                        <VBox.margin>
                           <Insets left="10.0" />
                        </VBox.margin></Button>
                  </children>
               </VBox>
            </items>
         </ToolBar>
      </children>
   </VBox>
