               <Label styleClass="text" stylesheets="@../css/allOffers.css" text="Zip code :">
                  <padding>
                     <Insets left="5.0" />
                  </padding></Label>
               <TextField fx:id="location" prefHeight="26.0" prefWidth="60.0" promptText="54510" styleClass="textfield" stylesheets="@../css/allOffers.css" />
